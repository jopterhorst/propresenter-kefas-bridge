{
  "name": "propresenter-kefas-bridge",
  "productName": "ProPresenter Kefas Bridge",
  "version": "2025.11.5",
  "description": "Bridge ProPresenter lyrics to Kefas API",
  "author": "Jop ter Horst",
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^39.2.2",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "node-fetch": "^3.0.0"
  },
  "build": {
    "appId": "com.jopterhorst.propresenter-kefas-bridge.app",
    "productName": "ProPresenter Kefas Bridge",
    "icon": "src/assets/icon.png",
    "files": [
      "src/main/main.js",
      "src/bridge/bridge.js",
      "src/bridge/discovery.js",
      "src/renderer/preload.js",
      "src/renderer/main.html",
      "src/renderer/settings.html",
      "src/renderer/styles/**",
      "src/renderer/scripts/**",
      "src/assets/icon.png",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "sign": null,
      "icon": "src/assets/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "src/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

